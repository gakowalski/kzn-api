                        "den": {
                          "type": "integer",
                          "minimum": 1,
                          "maximum": 31
                        },
                        "měsíc": {
                          "type": "integer",
                          "minimum": 1,
                          "maximum": 12
                        }
                      },
                      "required": [
                        "typ",
                        "den",
                        "měsíc"
                      ]
                    }
                  },
                  "required": [
                    "typ",
                    "začátek",
                    "konec"
                  ]
                }
              },
              "required": [
                "typ",
                "časový_interval"
              ]
            },
            "dny_v_týdnu": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "typ": {
                      "type": "string",
                      "enum": [ "Den v týdnu" ]
                    },
                    "den": {
                      "type": "string",
                      "enum": [
                        "https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/pondělí",
                        "https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/úterý",
                        "https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/středa",
                        "https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/čtvrtek",
                        "https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/pátek",
                        "https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/sobota",
                        "https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/neděle"
                      ]
                    },
                    "časová_doba": {
                      "type": "array",
                      "items": [
                        {
                          "type": "object",
                          "properties": {
                            "typ": {
                              "type": "string",
                              "enum": [ "Časová doba" ]
                            },
                            "od": {
                              "type": "string",
                              "pattern": "^\\d{2}:\\d{2}:\\d{2}$"
                            },
                            "do": {
                              "type": "string",
                              "pattern": "^\\d{2}:\\d{2}:\\d{2}$"
                            }
                          },
                          "required": [
                            "typ",
                            "od",
                            "do"
                          ]
                        }
                      ]
                    }
                  },
                  "required": [
                    "typ",
                    "den",
                    "časová_doba"
                  ]
                }
              ]
            }
          },
          "required": [
            "typ",
            "popis",
            "časový_interval",
            "dny_v_týdnu"
          ]
        }
      ]
    },
    "příloha": {
      "type": "array",
      "minItems": 1,
      "items": [
        {
          "type": "object",
