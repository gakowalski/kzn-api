            "autor_díla": {
              "type": [ "string", "null" ]
            },
            "typ_média": {
              "type": "string",
              "enum": [
                "https://www.iana.org/assignments/media-types/image/jpeg",
                "https://www.iana.org/assignments/media-types/image/webp"
              ]
            },
            "název": {
              "type": [ "object", "null" ],
              "properties": {
                "cs": {
                  "type": "string"
                }
              },
              "required": [
                "cs"
              ]
            },
            "popis": {
              "type": [ "object", "null" ],
              "properties": {
                "cs": {
                  "type": "string"
                }
              },
              "required": [
                "cs"
              ]
            }
          },
          "required": [
            "typ",
            "url",
            "typ_média"
          ]
        }
      ]
    }
  },
  "required": [
    "@context",
    "typ",
    "doba_trvání",
    "typ_události",
