    "vhodné_pro_zvířata": {
      "type": "boolean"
    },
    "za_každého_počasí": {
      "type": "boolean"
    },
    "bezbariériový_přístup": {
      "type": "boolean"
    },
    "časová_náročnost": {
      "type": "number",
      "minimum": 0,
      "maximum": 10
    },
    "registrace": {
      "type": [ "object", "null" ],
      "properties": {
        "cs": {
          "type": "string",
          "minLength": 5,
          "format": "uri"
        }
      },
      "required": [
        "cs"
      ]
    },
    "pořadatel": {
      "type": "object",
      "properties": {
        "typ": {
          "type": "string",
          "enum": [ "Osoba" ]
        },
        "název": {
          "type": "object",
          "properties": {
            "cs": {
              "type": "string",
              "minLength": 5
            }
          },
          "required": [
            "cs"
          ]
        },
        "geometrie": {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Point" ]
            },
            "coordinates": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": [
                {
                  "type": "number"
                }
              ]
            }
          },
          "required": [
            "typ",
            "coordinates"
          ]
        },
        "adresa": {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Kontaktní adresa" ]
            },
            "ulice": {
              "type": "string",
              "minLength": 5
            },
            "obec": {
              "type": "string",
              "minLength": 5
            },
            "psč": {
              "type": "string",
              "minLength": 5
            },
            "kontakt": {
              "type": [ "object", "null" ],
              "properties": {
                "typ": {
                  "type": "string",
                  "enum": [ "Kontakt" ]
                },
                "email": {
                  "type": [ "string", "null" ],
                  "pattern": "^mailto:[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
                },
                "mobil": {
                  "type": [ "string", "null" ]
                },
                "facebook": {
                  "type": [ "string", "null" ]
                },
                "instagram": {
                  "type": [ "string", "null" ]
                },
                "twitter": {
                  "type": [ "string", "null" ]
                },
                "url": {
                  "type": [ "string", "null" ],
                  "format": "uri"
                }
              },
              "required": [
                "typ"
              ]
            }
          },
          "required": [
            "typ",
            "ulice",
            "obec",
            "psč"
          ]
        },
        "kontaktní_osoba": {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Kontaktní osoba" ]
            },
            "jméno": {
              "type": "string",
              "minLength": 5
            },
            "email": {
              "type": "string",
              "minLength": 5,
              "pattern": "^mailto:[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
            },
            "mobil": {
              "type": [ "string", "null" ]
            }
          },
          "required": [
            "typ",
            "jméno",
            "email"
          ]
        }
      },
      "required": [
        "typ",
        "název",
        "geometrie",
        "adresa",
        "kontaktní_osoba"
      ]
    },
    "umístění": {
      "type": [ "array", "null" ],
      "items": [
        {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Místo konání" ]
            },
            "název": {
              "type": "object",
              "properties": {
                "cs": {
                  "type": "string",
                  "minLength": 5
                }
              },
              "required": [
                "cs"
              ]
            },
            "geometrie": {
              "type": "object",
              "properties": {
                "typ": {
                  "type": "string",
                  "enum": [ "Point" ]
                },
                "coordinates": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": [
                    {
                      "type": "number"
                    }
                  ]
                }
              },
              "required": [
                "typ",
                "coordinates"
              ]
            },
            "adresa": {
              "type": "object",
              "properties": {
                "typ": {
                  "type": "string",
                  "enum": [ "Kontaktní adresa" ]
                },
                "ulice": {
                  "type": "string",
                  "minLength": 5
                },
                "obec": {
                  "type": "string",
                  "minLength": 5
                },
                "psč": {
                  "type": "string",
                  "minLength": 5
                }
