              "required": [
                "typ",
                "ulice",
                "obec",
                "psč"
              ]
            },
            "kontaktní_osoba": {
              "type": [ "object", "null" ],
              "properties": {
                "typ": {
                  "type": "string",
                  "enum": [ "Kontaktní osoba" ]
                },
                "jméno": {
                  "type": [ "string", "null" ]
                },
                "email": {
                  "type": [ "string", "null" ],
                  "pattern": "^mailto:[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
                },
                "mobil": {
                  "type": [ "string", "null" ]
                }
              },
              "required": [
                "typ"
              ]
            }
          },
          "required": [
            "typ",
            "název",
            "geometrie",
            "adresa"
          ]
        }
      ]
    },
    "kategorie_vstupného": {
      "type": [ "object", "null" ],
      "properties": {
        "typ": {
          "type": "string",
          "enum": [ "Vstupné" ]
