    "iri": {
      "type": "string",
      "minLength": 5,
      "format": "uri"
    },
    "název": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string",
          "minLength": 5
        }
      },
      "required": [
        "cs"
      ]
    },
    "vytvořeno": {
      "type": "object",
      "properties": {
        "typ": {
          "type": "string",
          "enum": [ "Časový okamžik" ]
        },
        "datum_a_čas": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "typ",
        "datum_a_čas"
      ]
    },
    "aktualizováno": {
      "type": "object",
      "properties": {
        "typ": {
          "type": "string",
