        "cena": {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Částka" ]
            },
            "výše": {
              "type": "integer",
              "minimum": 0
            },
            "měna": {
              "type": "string",
              "enum": [ "https://publications.europa.eu/resource/authority/currency/CZK" ]
            }
          },
          "required": [
            "typ",
            "výše",
            "měna"
          ]
        },
        "snížená_cena": {
          "type": [ "object", "null" ],
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Částka" ]
            },
            "výše": {
              "type": "integer",
              "minimum": 0
            },
            "měna": {
              "type": "string",
              "enum": [ "https://publications.europa.eu/resource/authority/currency/CZK" ]
            }
          },
          "required": [
            "typ",
            "výše",
            "měna"
          ]
        },
        "rodinné_vstupné": {
          "type": [ "object", "null" ],
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Částka" ]
            },
            "výše": {
              "type": "integer",
              "minimum": 0
            },
            "měna": {
              "type": "string",
              "enum": [ "https://publications.europa.eu/resource/authority/currency/CZK" ]
            }
          },
          "required": [
            "typ",
            "výše",
            "měna"
          ]
        },
        "poznámka": {
          "type": [ "object", "null" ],
          "properties": {
            "cs": {
              "type": "string"
            }
          },
          "required": [
            "cs"
          ]
        }
      },
      "required": [
        "typ",
        "cena"
      ]
    },
    "otevírací_doba": {
      "type": [ "array", "null" ],
      "items": [
        {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Časová specifikace" ]
            },
            "popis": {
              "type": [ "object", "null" ],
              "properties": {
                "cs": {
                  "type": "string"
                }
              },
              "required": [
                "cs"
              ]
            },
            "časový_interval": {
              "type": "object",
              "properties": {
                "typ": {
                  "type": "string",
                  "enum": [ "Časová specifikace" ]
                },
                "časový_interval": {
                  "type": "object",
                  "properties": {
                    "typ": {
                      "type": "string",
                      "enum": [ "Časový interval" ]
                    },
                    "začátek": {
                      "type": "object",
                      "properties": {
                        "typ": {
                          "type": "string",
                          "enum": [ "Den v měsíci" ]
                        },
                        "den": {
                          "type": "integer",
                          "minimum": 1,
                          "maximum": 31
                        },
                        "měsíc": {
                          "type": "integer",
                          "minimum": 1,
                          "maximum": 12
                        }
                      },
                      "required": [
                        "typ",
                        "den",
                        "měsíc"
