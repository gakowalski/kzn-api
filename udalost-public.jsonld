{
  "$schema": "https://www.kudyznudy.cz/kzn/context/v1/udalost-public.jsonld",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string"
    },
    "typ": {
      "type": "string",
      "enum": [ "Událost" ]
    },
    "doba_trvání": {
      "type": "array",
      "minItems": 1,
      "items": [
        {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Časová specifikace" ]
            },
            "časový_interval": {
              "type": "object",
              "properties": {
                "typ": {
                  "type": "string",
                  "enum": [ "Časový interval" ]
                },
                "začátek": {
                  "type": "object",
                  "properties": {
                    "typ": {
                      "type": "string",
                      "enum": [ "Časový okamžik" ]
                    },
                    "datum_a_čas": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": [
                    "typ",
                    "datum_a_čas"
                  ]
                },
                "konec": {
                  "type": "object",
                  "properties": {
                    "typ": {
                      "type": "string",
                      "enum": [ "Časový okamžik" ]
                    },
                    "datum_a_čas": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": [
                    "typ",
                    "datum_a_čas"
                  ]
                }
              },
              "required": [
                "typ",
                "začátek",
                "konec"
              ]
            }
          },
          "required": [
            "typ",
            "časový_interval"
          ]
        }
      ]
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "iri": {
      "type": "string",
      "minLength": 5,
      "format": "uri"
    },
    "název": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string",
          "minLength": 5
        }
      },
      "required": [
        "cs"
      ]
    },
    "vytvořeno": {
      "type": "object",
      "properties": {
        "typ": {
          "type": "string",
          "enum": [ "Časový okamžik" ]
        },
        "datum_a_čas": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "typ",
        "datum_a_čas"
      ]
    },
    "aktualizováno": {
      "type": "object",
      "properties": {
        "typ": {
          "type": "string",
          "enum": [ "Časový okamžik" ]
        },
        "datum_a_čas": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "typ",
        "datum_a_čas"
      ]
    },
    "popis": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string",
          "minLength": 50
        }
      },
      "required": [
        "cs"
      ]
    },
    "geometrie": {
      "type": "object",
      "properties": {
        "typ": {
          "type": "string",
          "enum": [ "Point" ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": [
            {
              "type": "number"
            }
          ]
        }
      },
      "required": [
        "typ",
        "coordinates"
      ]
    },
    "příloha": {
      "type": "array",
      "minItems": 1,
      "items": [
        {
          "type": "object",
          "properties": {
            "typ": {
              "type": "string",
              "enum": [ "Digitální objekt" ]
            },
            "url": {
              "type": "string",
              "minLength": 5,
              "format": "uri"
            },
            "autor_díla": {
              "type": [ "string", "null" ]
            },
            "typ_média": {
              "type": "string",
              "enum": [ "https://www.iana.org/assignments/media-types/image/jpeg", 
                        "https://www.iana.org/assignments/media-types/image/webp" ]
            },
            "název": {
              "type": [ "object", "null" ],
              "properties": {
                "cs": {
                  "type": "string"
                }
              },
              "required": [
                "cs"
              ]
            },
            "popis": {
              "type": [ "object", "null" ],
              "properties": {
                "cs": {
                  "type": "string"
                }
              },
              "required": [
                "cs"
              ]
            }
          },
          "required": [
            "typ",
            "url",
            "typ_média"
          ]
        }
      ]
    }
  },
  "required": [
    "@context",
    "typ",
    "doba_trvání",
    "iri",
    "název",
    "vytvořeno",
    "aktualizováno",
    "popis",
    "geometrie",
    "příloha"
  ]
}
